<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/select_dialog_TitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ncd_blue"
        android:text="@string/SoftVersionText"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:gravity="center_horizontal"/>


    <ListView
        android:id="@+id/select_dialog_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_below="@id/select_dialog_TitleTextView">

    </ListView>

    <Button
        android:id="@+id/select_dialog_cancel_button"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:text="@string/button_cancel_text"
        android:background="@drawable/button_background"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/white"
        android:layout_below="@id/select_dialog_listview"
        android:layout_alignEnd="@id/select_dialog_listview"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"/>

</RelativeLayout>
